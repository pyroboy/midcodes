{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*local"],
  "globalEnv": [
    "ADMIN_URL",
    "PRIVATE_SERVICE_ROLE",
    "RECAPTCHA_SECRET_KEY",
    "PUBLIC_SUPABASE_URL",
    "PUBLIC_SUPABASE_ANON_KEY",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", ".vercel/**", ".next/**", "build/**", "dist/**", ".output/**"],
      "inputs": [
        "apps/*/src/**/*",
        "apps/*/package.json",
        "apps/*/svelte.config.js",
        "apps/*/vite.config.ts",
        "apps/*/README.md"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": [
  "apps/*/src/**/*.tsx",
  "apps/*/src/**/*.ts",
  "apps/*/test/**/*.ts",
  "apps/*/test/**/*.tsx"
]
    }
  }
}