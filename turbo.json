{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "PRIVATE_SERVICE_ROLE",
    "RECAPTCHA_SECRET_KEY",
    "PUBLIC_SUPABASE_URL",
    "PUBLIC_SUPABASE_ANON_KEY"
  ],
  "globalDependencies": [
    "**/.env",
    "**/.env.*local",
    "**/svelte.config.*",
    "**/vite.config.*",
    "**/tsconfig*.json",
    "**/postcss.config.*",
    "**/tailwind.config.*",
    "**/package.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        "dist/**",
        ".svelte-kit/**",
        ".output/**",
        ".vercel/**",
        ".next/**"
      ],
      "inputs": [
        "src/**",
        "static/**",
        "svelte.config.*",
        "vite.config.*",
        "tsconfig*.json",
        "tailwind.config.*",
        "postcss.config.*",
        "package.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
